layout {
	tab name="Main" {
		pane size=1 borderless=true {
			plugin location="zellij:compact-bar"
		}
		pane split_direction="vertical" {
			pane size="30%" name="Test Area" command="bacon" {
				args "test"
			}
			pane size="70%" stacked=true {
				pane name="Command Area"
				pane cwd="backlog" name="Backlog" command="mc"
				pane cwd="src" command="mc" name="Working Area" focus=true
			}
		}
		pane size=1 borderless=true {
			plugin location="zellij:status-bar"
		}
	}
}
